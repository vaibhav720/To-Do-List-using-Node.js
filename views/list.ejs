
<%- include("header") -%>

<body>
    <div class="box" id="heading">
        <h1>
            <%= kindOfDay %>
        </h1>
    </div>

    <div class="box">
        <% for(var i=0;i<lista.length;i++){ %>
            
            <div class="item">
                <input type="checkbox">
               <p><%=lista[i] %></p> 
            </div>
            <%}%>
            <form class="item" action="/" method="post">
                <input type="text" name="item" placeholder="New item" autocomplete="off">
                <button type="submit" name="list" value="<%= kindOfDay%>">+</button>
            </form>
    </div>

    
</body>

<%- include("footer") -%>